{% layout 'layout.liquid' %}
{% block content %}

<div class="container-md">
<h2 class="text-center">{{user}} favorites!</h2>
<p>favorite composers: {{favoriteComposers}}</p>
<p>favorite pieces: {{favoritePieces}}</p>
<p>favorite genres: {{favoriteGenres}}</p>
</div>

<form action="/users/favorites" method="POST">
    <fieldset>
        <legend>Search Composers</legend>
        <label class="form-label" for="searchComposer">Search Composer:</label>
        <input 
            class="form-control" 
            type="text" 
            name="searchComposer" 
            id="searchComposer" 
            placeholder="Enter Composer Name Here"
        >
    </fieldset>
    <div class="text-center">
        <input type="submit" value="Search Composer" class="btn btn-primary">
    </div>
</form>

{{error}}

<h3>Search Results</h3>
<div class="composerResults">
    {% for composer in composers%}
    <div class="card" style="width: 18rem;">
    <img src="{{composer.portrait}}" alt=`Portrait of {{composer.complete_name}}` />
    <div class="card-body">
        <h5 class="card-title">{{composer.complete_name}}</h5>
        <p class="card-text">{{composer.epoch}}</p>
        <!-- <a href="#" class="btn btn-primary">Go somewhere</a> -->
    </div>
    </div>
    {% endfor %}
</div>

{% endblock %}