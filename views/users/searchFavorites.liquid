{% layout 'layout.liquid' %}
{% block content %}

{% if loggedIn %}

<div class="container-md">
    <h2 class="text-center">{{user}}'s favorites!</h2>
    <div class="favoritesText">
        <p><strong>Favorite Composers:</strong> 
            <ul>
            {% for composer in favoriteComposers %}
                <li>{{composer}} 
                    <form action="/users/delete/{{user._id}}/{{composer}}?_method=DELETE" method="POST">
                        <input type="submit" value="Delete" class="show-page btn btn-danger" />
                    </form>
                </li>
            {% endfor %}
            </ul>
        <p><strong>Favorite Pieces:</strong> {{favoritePieces}}</p>
        <p><strong>Favorite Genres:</strong> {{favoriteGenres}}</p>
    </div>

    <div class="searchDB">
        <form action="/users/favorites" method="POST">
            <fieldset>
                <legend class="text-center">Search Composers</legend>
                <label class="form-label" for="searchComposer">Search Composer:</label>
                <input 
                    class="form-control" 
                    type="text" 
                    name="searchComposer" 
                    id="searchComposer" 
                    placeholder="Enter Composer Name Here"
                >
            </fieldset>
            <div class="text-center">
                <input type="submit" value="Search Composers" class="btn btn-primary">
            </div>
        </form>
    </div>
    <div class="searchDB">
        <form action="/users/favorites" method="POST">
            <fieldset>
                <legend class="text-center">Search Pieces</legend>
                <label class="form-label" for="searchPieces">Search Pieces:</label>
                <input 
                    class="form-control" 
                    type="text" 
                    name="searchPieces" 
                    id="searchPieces" 
                    placeholder="Enter Piece Name Here"
                >
            </fieldset>
            <div class="text-center">
                <input type="submit" value="Search Pieces" class="btn btn-primary">
            </div>
        </form>
    </div>


<div id="error">
{% if error %}
    There has been an error. Please search again!
{% endif %}
</div>


{% if composers %}
<h3 class="text-center">Search Results</h3>
<div class="composerResults">
    {% for composer in composers%}
    <div class="card composerCard text-center" style="width: 18rem;">
    <img src="{{composer.portrait}}" alt=`Portrait of {{composer.complete_name}}` />
    <div class="composerCardBody card-body">
        <h5 class="composerTitle card-title">{{composer.complete_name}}</h5>
        <p class="card-text">{{composer.epoch}}</p>
        <form action="/users/{{composer.complete_name}}?_method=PUT" method="POST">
            <input type="submit" class="btn btn-primary composerAdd" value="Add to Favorites" class="btn btn-primary composerAdd">
        </form>
    </div>
    </div>
    {% endfor %}
</div>
{% endif %}

{% else %}
<h2 class="text-center">
    Please log in!
</h2>

{% endif %}
</div>
{% endblock %}