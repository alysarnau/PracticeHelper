{% layout 'layout.liquid' %}

{% block content %}
<div>
    <h2 class="display-6">All Practice Entries</h2>
    <div class="row">
        {% for practice in practices %}
            <div class="card">
                <h5 class="card-header">{{practice.date}}</h5>
                <div class="card-body">
                    <h5 class="card-title"><strong>Instrument:</strong> {{practice.instrument}}
                    </h5>
                    <h6 class="card-body">
                        {% for entry in practice.entries %}
                        <strong>"{{entry.piece}}", {{entry.composer}}</strong>
                        <ul>
                            <li>{{entry.minutes}} minutes</li>
                            <li>Notes: {{entry.note}}</li>
                        </ul>
                        {% endfor %}
                    </h6>
                    <a href='/practices/{{practice._id}}' class="btn btn-info">View Practice</a>
                </div>
            </div>
        {% endfor %}
    </div>
    <a href='/practices/new' class="btn btn-success">Log New Practice</a>
</div>
{% endblock %}